<Window x:Class="GUI.View.AddDichVu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:GUI.ViewModel"
        xmlns:uc="clr-namespace:GUI.UserControlLC"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        Name="AddDichVuWindow"
        
        WindowStartupLocation="CenterScreen"
        Title="Thêm Dịch Vụ" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=AddDichVuWindow}"></uc:ControlBarUC>
        </Grid>
        <materialDesign:Card Grid.Row="1">
            <StackPanel Margin="0 0 0 10">
                <TextBox Margin="5" materialDesign:HintAssist.Hint="Tên Dịch Vụ" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Stretch" Text="{Binding tenDV}"></TextBox>
                <TextBox Margin="5" materialDesign:HintAssist.Hint="Đơn Vị Tính" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Stretch" Text="{Binding donVi}"></TextBox>
                <TextBox Margin="5" materialDesign:HintAssist.Hint="Đơn Giá" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Stretch" Text="{Binding donGia}"></TextBox>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card Grid.Row="2">
            <Button Margin="40 5 " Background="#FF00E676" Content="Tạo Dịch Vụ" Command="{Binding AddDichVuCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"></Button>
        </materialDesign:Card>
    </Grid>
</Window>
